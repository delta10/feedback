---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { ForumPost } from '@/components/features/forum/ForumPost'
import { getPost, type Post } from '../../utils/forumPostService'


const {id} = Astro.params

if (!id)
  return

const post: Post | null = await getPost(id)
---

<BaseLayout>
  {post && <ForumPost post={post}/>}
</BaseLayout>