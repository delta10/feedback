---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { ForumPost } from '@/components/features/forum/ForumPost'
import { getPosts } from '../../utils/forumPostService'

const post = Astro.props.post

export async function getStaticPaths() {
  const posts = await getPosts();

  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}
---

<BaseLayout>
  <ForumPost post={post}/>
</BaseLayout>